[32m+[m[32m          kondisi: row.kondisi,[m
[32m+[m[32m          alasan: row.alasan,[m
[32m+[m[32m          penanganan: row.penanganan,[m
[32m+[m[32m        }[m
[32m+[m[32m      );[m
[32m+[m
[32m+[m[32m      try {[m
[32m+[m[32m        window.dispatchEvent([m
