[32m+[m[32m                tanggalPinjam: new Date().toISOString().slice(0, 10),[m
[32m+[m[32m                visitorCardId: resolvedVisitorCardId || r.visitorCardId || null,[m
[32m+[m[32m                kondisi: r.kondisi || "Baik",[m
[32m+[m[32m              }[m
[32m+[m[32m            : r[m
[32m+[m[32m        )[m
